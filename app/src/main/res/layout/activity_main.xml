<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_enter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/txt_result"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="00"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="36sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F1F1F1"
        android:paddingVertical="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#FF5722"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="C"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/open_brac"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="("
                android:textSize="32dp"
                android:backgroundTint="#5A5858"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/close_brac"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text=")"
                android:textSize="32dp"
                android:backgroundTint="#5A5858"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/divide"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="/"
                android:textSize="32dp"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:backgroundTint="#00BCD4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="7"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="8"
                android:backgroundTint="#00BCD4"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="9"
                android:backgroundTint="#00BCD4"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="*"
                android:textSize="32dp"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="4"
                android:backgroundTint="#00BCD4"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="5"
                android:textSize="32dp"
                android:backgroundTint="#00BCD4"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="6"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#00BCD4"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="+"
                android:textSize="32dp"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="1"
                android:textSize="32dp"
                android:backgroundTint="#00BCD4"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="2"
                android:textSize="32dp"
                android:backgroundTint="#00BCD4"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:backgroundTint="#00BCD4"
                android:id="@+id/bt_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="3"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/subsctract"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="-"
                android:textSize="38dp"
               android:textAlignment="center"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:backgroundTint="#FF5722"
                android:id="@+id/all_clear"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="AC"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/BT_0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="0"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:backgroundTint="#00BCD4"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="."
                android:textSize="32dp"
                android:backgroundTint="#00BCD4"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_equals"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="="
                android:textSize="32dp"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                android:layout_margin="12dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
